<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Tilstand når knappen er trykket -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#388E3C"/> <!-- Mørkere grønn når knappen er trykket -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <!-- Tilstand når knappen ikke er trykket -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Lys grønn når knappen ikke er trykket -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
