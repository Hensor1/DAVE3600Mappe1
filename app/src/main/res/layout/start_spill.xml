<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mattekul_bakgrunn"
    tools:context=".StartSpill">

    <!-- TextView for oppgave -->
    <TextView
        android:id="@+id/txt_løs_oppgaven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/løsOppgaven"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for oppgave -->
    <TextView
        android:id="@+id/txt_oppgave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_løs_oppgaven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for å vise svaret til brukeren -->
    <TextView
        android:id="@+id/txt_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/svar"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_oppgave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for tilbakemelding -->
    <TextView
        android:id="@+id/txt_tilbakemelding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_svar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for å vise svar -->
    <TextView
        android:id="@+id/txt_vis_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tilbakemelding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GridLayout for å organisere knappene, plassert på bunnen -->
    <Button
        android:id="@+id/knappVisSvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="@string/knappVisSvar"
        app:layout_constraintTop_toBottomOf="@id/txt_vis_svar"
        app:layout_constraintEnd_toEndOf="parent" />
        />

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:padding="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Knapp 1 -->
        <Button
            android:id="@+id/knapp1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp1"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 2 -->
        <Button
            android:id="@+id/knapp2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp2"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 3 -->
        <Button
            android:id="@+id/knapp3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp3"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 4 -->
        <Button
            android:id="@+id/knapp4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp4"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 5 -->
        <Button
            android:id="@+id/knapp5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp5"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 6 -->
        <Button
            android:id="@+id/knapp6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp6"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 7 -->
        <Button
            android:id="@+id/knapp7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp7"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 8 -->
        <Button
            android:id="@+id/knapp8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp8"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 9 -->
        <Button
            android:id="@+id/knapp9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp9"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />
        <!-- Knapp Tilbake -->
        <Button
            android:id="@+id/knappTilbake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knappTilbake"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 0 -->
        <Button
            android:id="@+id/knapp0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knapp0"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp OK -->
        <Button
            android:id="@+id/knappOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knappOk"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
