<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.s375063s375045.OmSpill">

    <!-- Bakgrunnsbilde -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/matte"
        android:scaleType="centerCrop"
        android:contentDescription="@string/matteSpill"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"/>

    <!-- Title TextView for the game information -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/velkommentilMattespillet"
        android:fontFamily="@font/font"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/knapp_bakgrunn"
        android:backgroundTint="#03A9F4"
        />

    <!-- Description TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/infoOmSpillet"
        android:fontFamily="@font/font"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/knapp_bakgrunn"
        android:backgroundTint="#03A9F4"

        />


</RelativeLayout>
