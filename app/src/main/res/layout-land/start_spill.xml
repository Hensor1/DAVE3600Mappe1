<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StartSpill">

    <!-- Bakgrunnsbilde -->
    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/matte"
        android:scaleType="centerCrop"
        android:contentDescription="@string/matteSpill"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp"/>

    <!-- TextView for oppgave -->
    <TextView
        android:id="@+id/txt_løs_oppgaven"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/løsOppgaven"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/knapp_bakgrunn"
        android:backgroundTint="#4CAF50"/>

    <!-- TextView for oppgave -->
    <TextView
        android:id="@+id/txt_oppgave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_løs_oppgaven"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/knapp_bakgrunn"
        android:backgroundTint="#FFFFFFFF"/>

    <!-- TextView for å vise svaret til brukeren -->
    <TextView
        android:id="@+id/txt_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/svar"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_oppgave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/knapp_bakgrunn"
        android:backgroundTint="#FFFFFFFF"/>

    <!-- TextView for tilbakemelding -->
    <TextView
        android:id="@+id/txt_tilbakemelding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_svar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/knapp_bakgrunn"
        android:backgroundTint="#FFFFFFFF"/>

    <!-- TextView for å vise svar -->
    <TextView
        android:id="@+id/txt_vis_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_tilbakemelding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/knappVisSvar"
        android:text="@string/knappVisSvar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="644dp"
        tools:layout_editor_absoluteY="205dp" />

    <!-- GridLayout for å organisere knappene, plassert på bunnen -->
    <GridLayout
        android:layout_width="916dp"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:columnCount="6"
        android:padding="8dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tilbakemelding"
        app:layout_constraintVertical_bias="0.923"
        tools:layout_editor_absoluteX="0dp">

        <!-- Knapp 1 -->
        <Button
            android:id="@+id/knapp1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp1"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 2 -->
        <Button
            android:id="@+id/knapp2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp2"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 3 -->
        <Button
            android:id="@+id/knapp3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp3"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 4 -->
        <Button
            android:id="@+id/knapp4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp4"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 5 -->
        <Button
            android:id="@+id/knapp5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp5"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 6 -->
        <Button
            android:id="@+id/knapp6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp6"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp Tilbake -->
        <Button
            android:id="@+id/knappTilbake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knappTilbake"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 7 -->
        <Button
            android:id="@+id/knapp7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp7"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 8 -->
        <Button
            android:id="@+id/knapp8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp8"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 9 -->
        <Button
            android:id="@+id/knapp9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp9"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 0 -->
        <Button
            android:id="@+id/knapp0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp0"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp OK -->
        <Button
            android:id="@+id/knappOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knappOk"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
