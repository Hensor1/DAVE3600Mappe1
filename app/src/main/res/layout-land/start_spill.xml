<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/mattekul_bakgrunn"
    tools:context=".StartSpill">

    <!-- TextView for oppgave -->
    <TextView
        android:id="@+id/txt_oppgave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/løsOppgaven"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for å vise svaret til brukeren -->
    <TextView
        android:id="@+id/txt_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/svar"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_oppgave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for riktige svar -->
    <TextView
        android:id="@+id/txt_riktige_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/riktigeSvar"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_svar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- TextView for gale svar -->
    <TextView
        android:id="@+id/txt_gale_svar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/galeSvar"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/txt_riktige_svar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- GridLayout for å organisere knappene, plassert på bunnen -->
    <GridLayout
        android:layout_width="915dp"
        android:layout_height="151dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:columnCount="5"
        android:padding="8dp"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_svar"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp">

        <!-- Knapp 1 -->
        <Button
            android:id="@+id/knapp1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp1"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 2 -->
        <Button
            android:id="@+id/knapp2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp2"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 3 -->
        <Button
            android:id="@+id/knapp3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp3"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 4 -->
        <Button
            android:id="@+id/knapp4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp4"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 5 -->
        <Button
            android:id="@+id/knapp5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp5"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 6 -->
        <Button
            android:id="@+id/knapp6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp6"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 7 -->
        <Button
            android:id="@+id/knapp7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp7"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 8 -->
        <Button
            android:id="@+id/knapp8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp8"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp 9 -->
        <Button
            android:id="@+id/knapp9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp9"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp Tilbake -->
        <Button
            android:id="@+id/knappTilbake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knappTilbake"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

        <!-- Knapp 0 -->
        <Button
            android:id="@+id/knapp0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/knapp_bakgrunn"
            android:text="@string/knapp0"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <!-- Knapp OK -->
        <Button
            android:id="@+id/knappOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="@string/knappOk"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/knapp_bakgrunn" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
